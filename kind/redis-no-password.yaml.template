apiVersion: dapr.io/v1alpha1
kind: Component
metadata:
  name: pubsub-{PUBSUB}
  namespace: {TARGET_NAMESPACE}
spec:
  type: pubsub.redis
  version: v1
  metadata:
    - name: redisHost
      value: redis-{PUBSUB}-master.redis-{PUBSUB}.svc.cluster.local:6379
    - name: redisPassword
      value: {REDIS_PASSWORD}
